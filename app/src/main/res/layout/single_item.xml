<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:text="Back"
        android:textSize="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_margin="10dp"
        android:text="Ime"
        android:textSize="110px"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/single_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_name"
        android:layout_margin="10dp"
        android:text="Grupa"
        android:textSize="70px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_group"
        android:layout_margin="2dp"
        android:text="Količina"
        android:textSize="150px"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/single_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_quantity"
        android:layout_margin="10dp"
        android:text="Lokacija"
        android:textSize="80px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_location"
        android:layout_margin="10dp"
        android:text="Link"
        android:textSize="50px"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_link"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textSize="100px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        />
    <Button
        android:id="@+id/plus_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plus_button"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:textSize="100px"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/single_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plus_minus"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:textSize="80px"
        android:layout_margin="20dp"
        />
</RelativeLayout>